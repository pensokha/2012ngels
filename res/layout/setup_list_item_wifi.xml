<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="453.33dp"
    android:layout_height="61.33dp"
    android:background="@drawable/setup_bg02"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="24dp"
    android:paddingRight="24dp" >

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/setup_icon_wifi_teacher01" />

    <TextView
        android:id="@+id/directId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="WI-FI Direct ID (1)"
        android:textColor="#887257"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/wifiIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setup_icon_wifi02" />

</LinearLayout>