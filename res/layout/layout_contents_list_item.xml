<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/list_bg01"
    android:paddingBottom="37dp" >

    <TextView
        android:id="@+id/txt_list_tag_01"
        style="@style/fontstyle_txt_main_list_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:background="@drawable/list_tag01"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:text="ENGLISH" />

    <RelativeLayout
        android:id="@+id/layout_content_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/btn_main_book_selector" >

        <TextView
            android:id="@+id/txt_content_01"
            style="@style/fontstyle_txt_main_contenst_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar 
			android:id="@+id/progressbar_01" 
			android:layout_width="121dp" 
			android:layout_height="15dp" 
			android:layout_centerInParent="true"
			android:progress="0"
			android:max="100" 
			android:secondaryProgress="0"
			style="@style/Widget.Pogressbar" 
			android:visibility="invisible"
			/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_content_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:background="@drawable/btn_main_book_selector" >

        <TextView
            android:id="@+id/txt_content_02"
            style="@style/fontstyle_txt_main_contenst_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar 
			android:id="@+id/progressbar_02" 
			android:layout_width="121dp" 
			android:layout_height="15dp" 
			android:layout_centerInParent="true"
			android:progress="0"
			android:max="100" 
			android:secondaryProgress="0"
			style="@style/Widget.Pogressbar" 
			android:visibility="invisible"
			/>
    </RelativeLayout>

</RelativeLayout>