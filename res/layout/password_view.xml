<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="525.82dp"
    android:layout_height="wrap_content"
    android:background="@drawable/setup_bg02"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <org.our.android.ouracademy.ui.widget.NCTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.07dp"
        android:layout_marginTop="20.07dp"
        android:shadowColor="#ffffff"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/str_password"
        android:textColor="#887257"
        android:textSize="22.54dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25.07dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <org.our.android.ouracademy.ui.view.PasswordEditText
            android:id="@+id/first"
            android:layout_width="69.86dp"
            android:layout_height="70.61dp"
            android:layout_marginRight="7.51dp"
            android:background="@drawable/setup_password01"
            android:gravity="center"
            android:password="true" >
        </org.our.android.ouracademy.ui.view.PasswordEditText>

        <org.our.android.ouracademy.ui.view.PasswordEditText
            android:id="@+id/second"
            android:layout_width="69.86dp"
            android:layout_height="70.61dp"
            android:layout_marginRight="7.51dp"
            android:background="@drawable/setup_password01"
            android:gravity="center"
            android:password="true" >
        </org.our.android.ouracademy.ui.view.PasswordEditText>

        <org.our.android.ouracademy.ui.view.PasswordEditText
            android:id="@+id/third"
            android:layout_width="69.86dp"
            android:layout_height="70.61dp"
            android:layout_marginRight="7.51dp"
            android:background="@drawable/setup_password01"
            android:gravity="center"
            android:password="true" >
        </org.our.android.ouracademy.ui.view.PasswordEditText>

        <org.our.android.ouracademy.ui.view.PasswordEditText
            android:id="@+id/fourth"
            android:layout_width="69.86dp"
            android:layout_height="70.61dp"
            android:background="@drawable/setup_password01"
            android:gravity="center"
            android:password="true" >
        </org.our.android.ouracademy.ui.view.PasswordEditText>
    </LinearLayout>

</LinearLayout>