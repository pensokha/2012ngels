<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/player_bg04"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"	
    android:paddingTop="20dp">
    
    <ImageView 
        android:id="@+id/thumb"        
		android:layout_width="202dp"
		android:layout_height="97dp"
		android:layout_marginTop="22.29dp"
		android:layout_marginLeft="61.65dp"
		android:background="@android:color/black"	/>    
    
    <RelativeLayout
        android:id="@+id/book"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/btn_main_book_selector">
        
        <org.our.android.ouracademy.ui.widget.VerticalTextView 
            android:id="@+id/subject"
 			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="13dp"
			android:layout_marginTop="20dp"
			style="@style/fontstyle_txt_main_contenst_title"
            />

		<org.our.android.ouracademy.ui.widget.NCTextView 
		    android:id="@+id/title"
 			android:layout_width="188.67dp"
			android:layout_height="48.67dp"
			android:gravity="center"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="70dp"
			android:layout_marginTop="125.67dp"
			style="@style/fontstyle_txt_main_contenst_txt"		/>
        
    </RelativeLayout>
</FrameLayout>