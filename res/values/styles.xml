<resources>

    <style name="Common_Font_Style">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="fontstyle_txt_main_menu" parent="Common_Font_Style">
        <item name="android:textColor">#714611</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#f5d1a5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="fontstyle_txt_main_list_tag" parent="Common_Font_Style">
        <item name="android:textColor">#638908</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#cbee79</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="fontstyle_txt_main_contenst_txt" parent="Common_Font_Style">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#ccffffff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="fontstyle_txt_main_category_title" parent="Common_Font_Style">
        <item name="android:textColor">#68797f</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#cedfd0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="fontstyle_txt_main_category_item_title" parent="Common_Font_Style">
        <item name="android:textColor">#9a866e</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#9a866e</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">15dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/custom_seek_bar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:thumb">@drawable/player_ctrl_time03</item>
        <item name="android:thumbOffset">10dip</item>
    </style>

    <style name="Widget.SeekBar.Sound" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">11.33dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/custom_seek_bar</item>
        <item name="android:minHeight">11.33dp</item>
        <item name="android:thumb">@drawable/player_ctrl_sound03</item>
        <item name="android:thumbOffset">10dip</item>
    </style>
    
    <style name="Widget.Pogressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
    </style>

</resources>