<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="51.33dp" >

    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/category_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="11dp"
        android:src="@drawable/menu_icon_check" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/category_check"
        android:layout_toRightOf="@id/category_icon"
        android:orientation="horizontal" >

        <org.our.android.ouracademy.ui.widget.NCTextView
            android:id="@+id/category_txt"
            style="@style/fontstyle_txt_main_category_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <org.our.android.ouracademy.ui.widget.NCTextView
            android:id="@+id/category_num_txt"
            style="@style/fontstyle_txt_main_category_item_num"
 			android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/menu_icon_num01" />
    </LinearLayout>

</RelativeLayout>