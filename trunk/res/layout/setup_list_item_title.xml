<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="525.82dp"
    android:layout_height="69.11dp"
    android:background="@drawable/setup_bg01" >

    <LinearLayout
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.77dp"
        android:layout_marginTop="1.5dp"
        android:background="@drawable/btn_state_setup_back"
        android:gravity="center"
        android:visibility="gone" >

        <org.our.android.ouracademy.ui.widget.NCTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#f6f3ee"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/str_back"
            android:textColor="#8a775f"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="2.25dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/titleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/setup_icon_title01" />

        <org.our.android.ouracademy.ui.widget.NCTextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#f8f6f2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/str_category"
            android:textColor="#534535"
            android:textSize="22.67dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14.29dp"
        android:src="@drawable/setup_btn_close" />

</RelativeLayout>